@using EmailApp.DataModels;
@using EmailApp.ViewModels;
@model InboxViewModel

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Inbox</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@{
    IEnumerable<EmailMessage> emailMessages = Model.EmailMessages.AsEnumerable();
}
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Subject
            </th>
            <th>
                From
            </th>
            <th>
                Priority
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EmailMessages) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>

            <td>
                <a asp-action="ViewEmail" asp-route-id="@item.Id">View</a>
                <a asp-action="Archive" asp-route-id="@item.MessageId">Archive</a> |
                <a asp-action="Delete" asp-route-id="@item.MessageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (Model.CurrentPageNumber > 1)
{
    <a asp-action="Inbox" asp-route-id="@Model.ConfigId" asp-route-pageNumber="@(Model.CurrentPageNumber-1)">Previous Page</a>    
}
@for (int i = 1; i <= Model.TotalPageCount; i++)
{
    <a asp-action="Inbox" asp-route-id="@Model.ConfigId" asp-route-pageNumber="@(i)"> | @i | </a>
}
@if (Model.CurrentPageNumber < Model.TotalPageCount)
{
    <a asp-action="Inbox" asp-route-id="@Model.ConfigId" asp-route-pageNumber="@(Model.CurrentPageNumber+1)">Next Page</a>
}